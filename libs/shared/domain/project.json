    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "libs/shared/domain/**/*.ts",
          "libs/shared/domain/**/*.html"
        ]
      }
    }
  },
  "tags": ["scope:shared type:domain"]
